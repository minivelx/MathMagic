<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_plantilla__algebra"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.movil.p.mathmagic.Plantilla_Algebra">

    <ProgressBar
        android:id="@+id/toolbar"
        android:padding="10dp"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:elevation="4dp"/>

    <TextView
        android:id="@+id/enunciado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:text="Resuelve la siguiente ecuaciÃ³n"
        android:textSize="20dp"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="18dp"
        android:id="@+id/ejercicio"
        android:scaleType="centerInside"
        android:layout_below="@+id/enunciado"
        android:layout_alignLeft="@+id/enunciado"
        android:layout_centerHorizontal="true"
        android:src="@drawable/al1"
        android:layout_alignStart="@+id/enunciado" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="A ."
        android:textSize="20dp"
        android:layout_below="@+id/ejercicio"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="80dp"
        android:id="@+id/textView13" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="B ."
        android:textSize="20dp"
        android:layout_below="@+id/textView13"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:id="@+id/textView14" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="C ."
        android:textSize="20dp"
        android:layout_below="@+id/textView14"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:id="@+id/textView15" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:text="D ."
        android:textSize="20dp"
        android:layout_below="@+id/textView15"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:id="@+id/textView16" />

    <Button
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="X=2"
        android:id="@+id/btn1"
        android:backgroundTint="@android:color/holo_green_light"
        android:textColor="#ffffff"
        android:layout_alignBaseline="@+id/textView13"
        android:layout_alignBottom="@+id/textView13"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="X=2"
        android:id="@+id/btn2"
        android:backgroundTint="@android:color/holo_green_light"
        android:textColor="#ffffff"
        android:layout_alignBaseline="@+id/textView14"
        android:layout_alignBottom="@+id/textView14"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="X=2"
        android:id="@+id/btn3"
        android:backgroundTint="@android:color/holo_green_light"
        android:textColor="#ffffff"
        android:layout_alignBaseline="@+id/textView15"
        android:layout_alignBottom="@+id/textView15"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="X=2"
        android:id="@+id/btn4"
        android:backgroundTint="@android:color/holo_green_light"
        android:textColor="#ffffff"
        android:layout_alignBaseline="@+id/textView16"
        android:layout_alignBottom="@+id/textView16"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:id="@+id/retroalimentacion_ok"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/ejercicio"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:background="@drawable/round_corner"
        android:gravity="center"
        android:visibility="invisible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="18dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:text="Correcto!"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/retroalimentacion_fail"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/ejercicio"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:background="@drawable/round_corner_fail"
        android:gravity="center"
        android:visibility="invisible">

        <TextView
            android:id="@+id/retro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="18dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:text="La respuesta correcta es la A."/>

    </LinearLayout>

    <Button
        android:id="@+id/bnt_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Siguiente"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:layout_alignParentBottom="true"
        android:textColor="#ffffff"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>
